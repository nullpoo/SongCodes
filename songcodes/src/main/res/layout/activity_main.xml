<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nullpoo.songcodes.MainActivity$PlaceholderFragment">

    <!-- 検索ワード入力フォーム -->
    <EditText
        android:id="@+id/main_search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_search_edit_hint"/>

    <!-- ANDとOR切り替えスイッチ -->
    <Switch
        android:id="@+id/main_search_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/main_search_type_and"
        android:textOff="@string/main_search_type_or" />

    <!-- 検索実行ボタン -->
    <Button
        android:id="@+id/main_search_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_search_submit"/>

</LinearLayout>